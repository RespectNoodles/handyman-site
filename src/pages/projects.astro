---
import BaseHead from '@/components/BaseHead.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { SITE_TITLE } from '../consts';
import { projectData } from '@/data/projects.js';
---

<BaseHead
  title={`Projects â€“ ${SITE_TITLE}`}
  description="Browse recent handyman projects completed by Handyman Cruz."
/>

<body class="bg-gray-100 text-gray-800">
  <Header />

  <main class="max-w-5xl mx-auto px-6 py-12">
    <h1 class="text-3xl font-semibold mb-8">Recent Projects</h1>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {projectData.map(project => (
        <div class="bg-white rounded-lg shadow p-4">
          <img
            src={project.image}
            alt={project.title}
            class="rounded mb-4 w-full h-auto object-cover"
            loading="lazy"
          />
          <h3 class="text-xl font-semibold text-gray-800 mb-2">{project.title}</h3>
          <p class="text-gray-700 text-sm">{project.content}</p>
        </div>
      ))}
    </div>
  </main>

  <Footer />
</body>
