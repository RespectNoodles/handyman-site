---
import Layout from '../layouts/Layout.astro';
import BaseHead from '../components/BaseHead.astro';

const projects = [
  {
    title: 'Outdoor Deck Refurbishment',
    summary: 'Reinforced framing, replaced damaged boards, and sealed for weather protection.'
  },
  {
    title: 'Interior Repair Sprint',
    summary: 'Patched walls, aligned doors, and completed high-impact finishing details in one visit.'
  },
  {
    title: 'Pathway Upgrade',
    summary: 'Re-graded and paved access paths to improve safety and street presentation.'
  }
];
---

<Layout title="Projects | Handyman Cruz">
  <BaseHead title="Projects | Handyman Cruz" description="See project examples from Handyman Cruz." />

  <section class="mx-auto max-w-6xl px-4 py-16 md:px-8">
    <p class="text-sm uppercase tracking-[0.25em] text-cyan-300">Projects</p>
    <h1 class="mt-3 text-4xl font-extrabold md:text-5xl">Examples of quality work and consistent delivery.</h1>

    <div class="mt-10 grid gap-6 md:grid-cols-3">
      {projects.map((project) => (
        <article class="rounded-2xl border border-slate-800 bg-slate-900 p-6">
          <h2 class="text-2xl font-bold text-cyan-300">{project.title}</h2>
          <p class="mt-4 text-slate-300">{project.summary}</p>
        </article>
      ))}
    </div>
  </section>
</Layout>
