---
import BaseHead from '@/components/BaseHead.astro';
import Header   from '@/components/Header.astro';
import Footer   from '@/components/Footer.astro';

/* Simple testimonials data */
const testimonials = [
  {
    quote: "“Cruz transformed our tired deck into a weekend paradise — punctual, tidy, and a dead‑set craftsman.”",
    name:  "Michelle T., Fremantle"
  },
  {
    quote: "“Amazing creativity with recycled timber. The new fence is both eco‑friendly and a talking point!”",
    name:  "Ben D., Subiaco"
  },
  {
    quote: "“Fast response, transparent pricing, and zero mess left behind. Can’t recommend Cruz highly enough.”",
    name:  "Asha K., Joondalup"
  },
  {
    quote: "“Our café revamp stayed on budget and finished early. The rustic shelving he built is Instagram gold.”",
    name:  "Felix G., Leederville"
  }
];
---

<BaseHead
  title="Testimonials – Handyman Cruz"
  description="Real feedback from happy clients who trusted Handyman Cruz for their projects."
/>

<style is:global>
  /* Fade‑in animation */
  .fade-in   { opacity: 0; transform: translateY(20px); transition: opacity .6s, transform .6s; }
  .fade-show { opacity: 1; transform: translateY(0);    }
</style>

<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-700 text-gray-100 min-h-screen">
  <Header />

  <main class="max-w-3xl mx-auto px-6 py-16 space-y-12">
    <h1 class="text-4xl font-extrabold text-center mb-12">What Clients Say</h1>

    <!-- Testimonial cards -->
    {testimonials.map((t, idx) => (
      <blockquote
        class="fade-in bg-gray-800/60 backdrop-blur-md rounded-lg p-8 shadow-lg"
        data-idx={idx}
      >
        <p class="text-xl md:text-2xl mb-4 italic">{t.quote}</p>
        <footer class="text-blue-300 font-semibold">{t.name}</footer>
      </blockquote>
    ))}
  </main>

  <Footer />

  <script>
    /* IntersectionObserver to reveal each card on scroll */
    const observer = new IntersectionObserver(
      entries => {
        entries.forEach(entry => {
          if (entry.isIntersecting) entry.target.classList.add('fade-show');
        });
      },
      { threshold: 0.2 }
    );
    document.querySelectorAll('.fade-in').forEach(el => observer.observe(el));
  </script>
</body>
