---
import Layout from '../layouts/Layout.astro';
import BaseHead from '../components/BaseHead.astro';
import ParallaxHero from '../components/ParallaxHero.astro';
---

<Layout title="Testimonials – Handyman Cruz">
  <BaseHead title="Testimonials – Handyman Cruz" description="Hear what past clients say about the quality and care of my work." />
  <ParallaxHero title="Testimonials" subtitle="What clients are saying about my work" />

  <section class="max-w-5xl mx-auto p-8 grid gap-8 md:grid-cols-2 lg:grid-cols-3 my-12">
    {[
      {
        quote: "Cruz transformed our back patio. Professional, quick, and top-notch work!",
        name: "— Sophie T., Midland",
      },
      {
        quote: "You rarely meet tradies this reliable. Always on time and polite.",
        name: "— Marcus D., Ellenbrook",
      },
      {
        quote: "Gave life to our backyard fence — it’s better than new. Highly recommend!",
        name: "— Leila & Tom, Bayswater",
      },
      {
        quote: "Trustworthy, skilled, and genuinely cares about the job — Cruz is a gem.",
        name: "— Trevor G., Dianella",
      },
      {
        quote: "We’ve used Handyman Cruz for everything from shelves to sealing leaks. Never disappoints.",
        name: "— Carol N., Morley",
      },
    ].map(({ quote, name }) => (
      <blockquote class="bg-white p-6 rounded-lg shadow-md text-gray-800">
        <p class="mb-4">“{quote}”</p>
        <cite class="text-gray-600 italic">{name}</cite>
      </blockquote>
    ))}
  </section>
</Layout>
