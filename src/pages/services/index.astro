---
import Layout       from '../../layouts/Layout.astro';
import BaseHead     from '../../components/BaseHead.astro';
import ParallaxHero from '../../components/ParallaxHero.astro';
import QuoteForm    from '../../components/QuoteForm.astro';
import FAQSection   from '../../components/FAQSection.astro';
import { servicesList } from '../../data/services.js';
---

<Layout title="Services – Handyman Cruz">
  <BaseHead title="Services – Handyman Cruz" description="Browse handyman services offered in Perth." />
  <ParallaxHero title="Our Services" subtitle="Expertise in every kind of repair and build" />

  <section id="services" class="max-w-5xl mx-auto px-6 py-12 grid gap-8 sm:grid-cols-2 fade-in">
    {servicesList.map(svc => (
      <article class="bg-neutral-800 rounded-lg p-6 shadow-lg">
        <h2 class="text-2xl font-semibold text-yellow-300 mb-2">{svc.title}</h2>
        <p class="text-neutral-200">{svc.description}</p>
      </article>
    ))}
  </section>

  <QuoteForm id="quote" />

  <FAQSection faqList={[
    { q: 'Do you service weekends?', a: 'Yes, by appointment – no extra charge.' },
    { q: 'Which suburbs do you cover?', a: 'Anywhere within 30 km of Perth CBD.' },
  ]}/>
</Layout>
