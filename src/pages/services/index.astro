---
import Layout       from '../../layouts/Layout.astro';
import BaseHead     from '../../components/BaseHead.astro';
import ParallaxHero from '../../components/ParallaxHero.astro';
import QuoteForm    from '../../components/QuoteForm.astro';
import FAQSection   from '../../components/FAQSection.astro';
import { servicesList } from '../../data/services.js';
---

<Layout title="Services – Handyman Cruz">
  <BaseHead title="Services – Handyman Cruz" description="Browse handyman services offered in Perth." />
  <ParallaxHero title="Our Services" subtitle="Expertise in every kind of repair and build" />

<section id="services" class="py-20 bg-gray-100 px-6">
  <h2 class="text-3xl font-semibold text-center mb-12">Services</h2>
  <div class="grid gap-8 md:grid-cols-3 max-w-6xl mx-auto">
    <div class="bg-white shadow-md rounded-lg overflow-hidden hover:scale-105 transition">
      <img src="/assets/service1.jpg" alt="Carpentry" class="w-full h-48 object-cover" />
      <div class="p-4">
        <h3 class="text-xl font-semibold">Carpentry</h3>
        <p class="text-gray-600 text-sm mt-2">Decks, repairs, custom solutions & more.</p>
      </div>
    </div>
    <!-- Repeat for other services -->
  </div>
  <div class="text-center mt-8">
    <a href="/services" class="inline-block border border-black px-5 py-2 rounded-full hover:bg-black hover:text-white transition">See All Services</a>
  </div>
</section>


  <QuoteForm id="quote" />

  <FAQSection faqList={[
    { q: 'Do you service weekends?', a: 'Yes, by appointment – no extra charge.' },
    { q: 'Which suburbs do you cover?', a: 'Anywhere within 30 km of Perth CBD.' },
  ]}/>
</Layout>
