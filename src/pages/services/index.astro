---
import Layout from '../../layouts/Layout.astro';
import BaseHead from '../../components/BaseHead.astro';

const services = [
  {
    title: 'General Repairs',
    href: '/services/general-repairs',
    description: 'Fast, clean fixes for doors, walls, fittings, and everyday issues.'
  },
  {
    title: 'Tiling & Grouting',
    href: '/services/tiling-grouting',
    description: 'Re-grouting, crack repair, tile replacement, and finish restoration.'
  },
  {
    title: 'Concreting & Paving',
    href: '/services/concreting-paving',
    description: 'Solid surfaces and paved areas designed to last and look sharp.'
  },
  {
    title: 'Ongoing Maintenance',
    href: '/',
    description: 'Regular support for homes, rentals, and small businesses.'
  }
];
---

<Layout title="Services | Handyman Cruz">
  <BaseHead title="Services | Handyman Cruz" description="Explore the services offered by Handyman Cruz." />

  <section class="mx-auto max-w-6xl px-4 py-16 md:px-8">
    <p class="text-sm uppercase tracking-[0.25em] text-cyan-300">Services</p>
    <h1 class="mt-3 text-4xl font-extrabold md:text-5xl">Practical services with professional execution.</h1>

    <div class="mt-10 grid gap-6 md:grid-cols-2">
      {services.map((service) => (
        <a href={service.href} class="rounded-2xl border border-slate-800 bg-slate-900 p-7 transition hover:-translate-y-1 hover:border-cyan-300/50">
          <h2 class="text-2xl font-bold text-cyan-300">{service.title}</h2>
          <p class="mt-3 text-slate-300">{service.description}</p>
        </a>
      ))}
    </div>
  </section>
</Layout>
