      /* --- Hero section -------------------------------- */
      .hero {
        position: relative;
        min-height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: #fff;
        background: url('/images/tools.jpg') center/cover no-repeat;
      }
      .hero::after {
        /* dark overlay for readability */
        content: '';
        position: absolute;
        inset: 0;
        background: rgba(0,0,0,0.55);
      }
      .hero-inner {
        position: relative;
        max-width: 750px;
        padding: 0 1.5rem;
        animation: fadeInUp 0.8s ease-out forwards;
        opacity: 0;          /* start hidden for animation */
        transform: translateY(20px);
      }
      .hero h1 {
        color: #fff;
        margin-bottom: 1rem;
      }
      .hero p {
        font-size: 1.2rem;
        margin-bottom: 2rem;
        color: #eef;
      }
      .btn-primary {
        background: var(--brand-blue);
        color: #fff;
        padding: 0.85rem 1.6rem;
        font-weight: 600;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: background 0.2s;
      }
      .btn-primary:hover { background: var(--brand-blue-dark); }

      /* --- Content sections ---------------------------- */
      main { max-width: 900px; margin: 3rem auto; padding: 0 1rem; }
      section {
        background: #fff;
        border-radius: 8px;
        padding: 2rem;
        margin-bottom: 2.5rem;
        box-shadow: 0 3px 8px rgba(0,0,0,.08);
        animation: fadeInUp 0.8s ease-out forwards;
        opacity: 0; transform: translateY(20px);
      }

      .card-images img,
