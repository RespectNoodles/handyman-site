---
<!-- src/pages/index.astro     (Home Page)
<!--
import Layout      from '../layouts/Layout.astro';
import BaseHead    from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts.js';
import QuoteForm   from '../components/QuoteForm.astro';
import FAQSection from '../components/FAQSection.astro';

// If you add arrays for Services or Projects in src/data later,
// you can import and loop over them here: */
// import { services }   from '@/data/services.js';
// import { projectData } from '@/data/projects.js';
---
<QuoteForm id="quote" />
layout: Layout

<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />

<!-- =====================  HERO  ===================== -->

<section class="relative h-[100vh] flex flex-col items-center justify-center text-white text-center bg-[url('/assets/your-hero.jpg')] bg-cover bg-center bg-fixed">
  <div class="bg-black/60 absolute inset-0 z-0"></div>
  <div class="z-10 max-w-3xl px-4">
    <h1 class="text-5xl md:text-6xl font-bold drop-shadow-md">Handyman Cruz</h1>
    <p class="text-xl mt-4">Reliable. Skilled. Local.</p>
    <a href="#about" class="mt-10 inline-block border border-white px-6 py-2 rounded-full hover:bg-white hover:text-black transition">Learn More</a>
  </div>
</section>

  <!-- Parallax background -->
  <div
    class="absolute inset-0 bg-cover bg-center bg-fixed"
    style="background-image: url('/images/texture-wood.jpg');"
  ></div>

  <!-- Animated gradient overlay -->
  <div
    class="absolute inset-0"
    style="
      background: linear-gradient(120deg, rgba(0,0,0,0.7), rgba(0,0,0,0.9));
      animation: bg-move 15s ease-in-out infinite alternate;
    "
  ></div>

  <!-- Hero content -->
  <div class="relative z-10 flex flex-col items-center justify-center h-full">
    <h1 class="text-4xl md:text-5xl font-extrabold text-yellow-400 drop-shadow-lg">
      Welcome to Handyman Cruz
    </h1>
    <p class="mt-4 text-lg md:text-xl max-w-xl text-neutral-200 text-center">
      I combine creativity and determination with a professional edge to make your dream project a reality. Let’s build something great.
    </p>
    <a
      href="#quote"
      class="mt-8 inline-block bg-orange-600 hover:bg-orange-700 text-white font-semibold px-6 py-3 rounded shadow transition"
    >
      Request a Free Quote
    </a>
  </div>

  <!-- Gradient Animation Keyframes -->
  <style is:global>
    @keyframes bg-move {
      0% { background-position: 0% 0%; }
      100% { background-position: 100% 100%; }
    }
  </style>
</section>

<main class="max-w-6xl mx-auto px-6 md:px-10 py-16 space-y-16">

  <!-- ===============  WHY CHOOSE ME  =============== -->
  <section id="about" class="py-20 bg-white text-black text-center px-6">
  <h2 class="text-3xl font-semibold mb-4">About Me</h2>
  <p class="max-w-2xl mx-auto text-lg mb-6">I’m Cruz, a local handyman with a passion for clean work, reliable service, and honest craftsmanship. Whether it’s a quick fix or a bigger project, I’ve got you covered.</p>
  <a href="/about" class="inline-block border border-black px-5 py-2 rounded-full hover:bg-black hover:text-white transition">Read More</a>
</section>
  <section class="bg-neutral-800 rounded-lg p-8 shadow-lg">
    <h2 class="text-3xl font-bold text-yellow-400 mb-6">Why Choose Me?</h2>
    <div class="md:flex md:items-center md:gap-8">
      <img
        src="/images/tools.jpg"
        alt="Handyman tools laid out"
        class="md:w-1/2 rounded-lg mb-6 md:mb-0 shadow-md"
        loading="lazy"
        width=3643
        height=2429
      />
      <ul class="text-neutral-300 text-lg space-y-3 list-disc list-inside">
        <li>5 + years hands‑on trade experience</li>
        <li>Safety‑focused with an extra care to cleanliness</li>
        <li>Transparent pricing — no hidden costs</li>
        <li>Friendly, punctual, and trustworthy service</li>
      </ul>
    </div>
  </section>

  <!-- ===============  SERVICE SNAPSHOT  =============== -->
  <section class="bg-bark/90 rounded-lg p-8 shadow-lg">
    <h2 class="text-3xl font-bold text-yellow-400 mb-8">Core Services</h2>

    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      <!-- Service card 1 -->
      <a href="/services/general-repairs" class="group bg-neutral-800 rounded-lg p-6 shadow transition hover:shadow-xl">
        <h3 class="text-xl font-semibold text-yellow-300 mb-2">General Repairs</h3>
        <p class="text-neutral-200 group-hover:text-neutral-100">
          Quick fixes for doors, walls, taps, and everything in between.
        </p>
      </a>

      <!-- Service card 2 -->
      <a href="/services/tiling-grouting" class="group bg-neutral-800 rounded-lg p-6 shadow transition hover:shadow-xl">
        <h3 class="text-xl font-semibold text-yellow-300 mb-2">Tiling & Grouting</h3>
        <p class="text-neutral-200 group-hover:text-neutral-100">
          Crack repairs, regrouting, and waterproof tiling that lasts.
        </p>
      </a>

      <!-- Service card 3 -->
      <a href="/services/concreting-paving" 
      class="group bg-neutral-800 rounded-lg p-6 shadow transition hover:shadow-xl">
        <h3 class="text-xl font-semibold text-yellow-300 mb-2">Concreting & Paving</h3>
        <p class="text-neutral-200 group-hover:text-neutral-100">
          Patios, pathways, and solid slab work built to endure.
        </p>
      </a>
    </div>

    <!-- 🚀  If you later import dynamic `services` array,
             map over it here instead of hard‑coding cards. -->
  </section>

  <!-- ===============  PROJECT HIGHLIGHTS  =============== -->

<section class="my-16 px-4 md:px-0">
  <h2 class="text-3xl font-bold text-center text-yellow-400 mb-10">My Recent Work</h2>
  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 max-w-6xl mx-auto">
    {[
      {
        src: '/images/sample-project1.jpg',
        title: 'Timber Deck Build',
        desc: 'Built a modern timber deck with strong foundations and smooth finish.',
      },
      {
        src: '/images/sample-project2.jpg',
        title: 'Fence Repair',
        desc: 'Repaired and reinforced a damaged boundary fence after storm damage.',
      },
      {
        src: '/images/sample-project3.jpg',
        title: 'Outdoor Tiling',
        desc: 'Completed outdoor tiling for patio using anti-slip stone tiles.',
      },
    ].map(project => (
      <div class="bg-white/10 backdrop-blur-md rounded-lg shadow-md overflow-hidden transition-transform hover:scale-[1.02]">
        <div class="aspect-[4/3] overflow-hidden">
          <img
            src={project.src}
            alt={project.title}
            class="w-full h-full object-cover transition-transform hover:scale-105"
          />
        </div>
        <div class="p-4">
          <h3 class="text-xl font-semibold text-yellow-300">{project.title}</h3>
          <p class="text-gray-300 mt-2 text-sm">{project.desc}</p>
        </div>
      </div>
    ))}

    <!-- (Optional) Add a “See More Projects” button -->
    <div class="text-center mt-10">
      <a href="/projects" class="bg-orange-600 hover:bg-orange-700 text-white px-6 py-3 rounded shadow transition">
        View All Projects
      </a>
    </div>
  </section>

  <!-- ===============  QUOTE FORM  =============== -->
  <section class="py-20 bg-black text-white text-center px-6">
  <h2 class="text-3xl font-bold mb-4">Ready to Get Started?</h2>
  <p class="mb-6 text-lg">Request a free quote today — I’ll get back to you within 24 hours.</p>
  <a href="/#quote-form" class="inline-block bg-white text-black px-6 py-3 rounded-full hover:bg-gray-300 transition">Request a Quote</a>
</section>

<!-- ============= Old Quote Form  ============= -->
  <section id="quote" class="bg-neutral-800 rounded-lg p-8 shadow-lg">
    <h2 class="text-3xl font-bold text-yellow-400 mb-6 text-center">Request a Free Quote</h2>

    <form action="#" method="POST" class="grid gap-4 max-w-lg mx-auto">
      <input type="text"     name="name"    placeholder="Your Name"    class="p-3 rounded bg-neutral-700 border border-neutral-600" required />
      <input type="email"    name="email"   placeholder="Your Email"   class="p-3 rounded bg-neutral-700 border border-neutral-600" required />
      <textarea name="message" placeholder="Describe the job…" rows="4" class="p-3 rounded bg-neutral-700 border border-neutral-600" required></textarea>
      <button type="submit" class="bg-orange-600 hover:bg-orange-700 text-white font-semibold py-2 rounded transition">
        Send Request
      </button>
    </form>
  </section>

  <!-- =============  FAQ Section ============= -->
  <!--
  <FAQSection
    faqList={[
    { q: 'Do you charge call‑out fees?', a: 'No. Quotes are free within the Perth metro area.' },
    { q: 'Are you fully insured?', a: 'Yes — public liability and personal accident cover.' },
    { q: 'Which payment methods do you accept?', a: 'Cash, EFT, and all major cards.' },
    { q: 'Are quotes really free?', a: 'Absolutely. No hidden fees or obligations.' },
    { q: 'Do you remove waste?', a: 'Yes—debris is taken away and the site left tidy.' },
    ]}/>

  <!-- =========  FUTURE SECTION PLACEHOLDERS ========= -->
  <!-- 
  <section id="faqs">Coming soon…</section>
  <section id="blog-feed">Coming soon…</section>
  -->

</main>

