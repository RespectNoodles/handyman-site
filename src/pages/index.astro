---
import BaseHead from '@/components/BaseHead.astro';
import Header   from '@/components/Header.astro';
import Footer   from '@/components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />

    <!-- Page‑specific styles -->
    <style is:global>
      /* --- Base typographic scale ----------------------- */
      :root {
        --brand-blue: #007acc;
        --brand-blue-dark: #005fa3;
        --bg-light: #f5f7fa;
      }
      body {
        font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: var(--bg-light);
        color: #333;
        margin: 0;
      }
      h1,h2 { font-weight: 600; color: var(--brand-blue-dark); }
      h1 { font-size: 2.75rem; }
      h2 { font-size: 1.75rem; }

      /* --- Hero section -------------------------------- */
      .hero {
        position: relative;
        min-height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: #fff;
        background: url('/images/tools.jpg') center/cover no-repeat;
      }
 
.hero::after {
  background: rgba(0, 0, 0, 0.68);   /* darker for readability */
}
.hero h1,
.hero p {
  text-shadow: 0 2px 6px rgba(0,0,0,.4);   /* subtle glow */
  }

      .btn-primary {
        background: var(--brand-blue);
        color: #fff;
        padding: 0.85rem 1.6rem;
        font-weight: 600;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: background 0.2s;
      }
      .btn-primary:hover { background: var(--brand-blue-dark); }

      /* --- Content sections ---------------------------- */
      main { max-width: 900px; margin: 3rem auto; padding: 0 1rem; }
      section {
        background: #fff;
        border-radius: 8px;
        padding: 2rem;
        margin-bottom: 2.5rem;
        box-shadow: 0 3px 8px rgba(0,0,0,.08);
        animation: fadeInUp 0.8s ease-out forwards;
        opacity: 0; transform: translateY(20px);
      }

      .card-images img,
      .experience img {
        display: block;
        max-width: 100%;
        height: auto;
        margin: 1rem auto;
        border-radius: 12px;
        box-shadow: 0 3px 10px rgba(0,0,0,.15);
      }

      form { display: flex; flex-direction: column; gap: 1rem; }
      input, textarea {
        padding: .85rem;
        border-radius: 6px;
        border: 1px solid #ccc;
        font-size: 1rem;
      }

      /* --- Animations (CSS‑only, zero JS) -------------- */
      @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to   { opacity: 1; transform: translateY(0); }
      }
    </style>
  </head>

  <body>
    <Header />

    <!-- ⭐ Hero / Top Banner -->
    <section class="hero" id="top">
      <div class="hero-inner">
        <h1>Reliable Handyman Services in Perth</h1>
        <p>
          Quality repairs, affordable pricing, and friendly service.<br />
          Let’s get your project off the ground — starting today.
        </p>
        <a href="#quote" class="btn-primary">Request a Free Quote</a>
      </div>
    </section>

    <!-- ⭐ Main Content -->
    <main>
      <!-- Why Choose Me -->
      <section class="experience">
        <h2>Why Choose Me?</h2>
        <img
          src="/images/tools.jpg"
          alt="Handyman tools laid out"
          width="800"
          height="500"
          loading="lazy"
          decoding="async"
        />
        <p>
          • 5 + years hands‑on trade experience<br />
          • Fully insured &amp; safety‑focused<br />
          • Transparent pricing — no hidden costs<br />
          • Friendly, punctual, and trustworthy service
        </p>
      </section>

      <!-- Business Cards -->
      <section class="card-images">
        <h2>Business Card</h2>
        <img src="/assets/Business-card-front.png" alt="Business Card Front" loading="lazy" />
        <img src="/assets/Business-card-back.png"  alt="Business Card Back"  loading="lazy" />
      </section>

      <!-- Testimonials -->
      <section class="testimonials" id="testimonials">
      <section class="my-16 px-4 md:px-0">
  <h2 class="text-3xl font-bold text-center text-gray-900 mb-10">My Recent Work</h2>
  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 max-w-6xl mx-auto">
    <!-- Project Card -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-[1.02]">
      <img src="/images/sample-project1.jpg" alt="Deck Build" class="w-full h-48 object-cover" />
      <div class="p-4">
        <h3 class="text-xl font-semibold text-gray-800">Timber Deck Build</h3>
        <p class="text-gray-600 mt-2">Built a modern timber deck with strong foundations and smooth finish.</p>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-[1.02]">
      <img src="/images/sample-project2.jpg" alt="Fence Repair" class="w-full h-48 object-cover" />
      <div class="p-4">
        <h3 class="text-xl font-semibold text-gray-800">Fence Repair</h3>
        <p class="text-gray-600 mt-2">Repaired and reinforced a damaged boundary fence after storm damage.</p>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-[1.02]">
      <img src="/images/sample-project3.jpg" alt="Tiling Job" class="w-full h-48 object-cover" />
      <div class="p-4">
        <h3 class="text-xl font-semibold text-gray-800">Outdoor Tiling</h3>
        <p class="text-gray-600 mt-2">Completed outdoor tiling for patio using anti-slip stone tiles.</p>
      </div>
    </div>
  </div>
</section>

        <h2>What People Say</h2>

        <blockquote>"Cruz fixed our fence in no time and even cleaned up after. Super reliable!"
          <cite>— Jake M., Glenroy</cite>
        </blockquote>
        <blockquote>"Professional, fast, and friendly. I’d definitely call him again."
          <cite>— Sal L., Craigieburn</cite>
        </blockquote>
        <blockquote>"Fair price and quality work. Highly recommended."
          <cite>— Teresa F., Roxburgh Park</cite>
        </blockquote>
      </section>

<!-- Quote Form -->
<section id="quote" class="bg-white rounded-lg shadow-lg p-6 my-10">
<h2 class="text-2xl font-bold text-center text-blue-700 mb-4">Request a Free Quote</h2>
<form action="#" method="POST" class="grid grid-cols-1 gap-4 max-w-xl mx-auto">
  <input type="text" name="name" placeholder="Your Name" class="p-3 rounded border border-gray-300" required />
  <input type="email" name="email" placeholder="Your Email" class="p-3 rounded border border-gray-300" required />
  <textarea name="message" placeholder="Describe the job..." rows="4" class="p-3 rounded border border-gray-300" required></textarea>
  <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Send Request</button>
  </form>
</section>


      <!-- Contact Info -->
      <section class="contact-info" id="contact">
        <h2>Contact Me</h2>
        <p>📞 <a href="tel:+61427706676">+61 427 706 676</a></p>
        <p>📧 <a href="mailto:handymancruz3@gmail.com">handymancruz3@gmail.com</a></p>
      </section>

      <!-- Social -->
      <section class="socials">
        <h2>Follow Me</h2>
        <a href="https://www.facebook.com/YOURBUSINESSPAGE" target="_blank" rel="noopener">
          🔵 Facebook
        </a>
      </section>
    </main>

    <Footer />
  </body>
</html>
