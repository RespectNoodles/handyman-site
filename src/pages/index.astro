---
// src/pages/index.astro (Homepage)
import Layout from '../layouts/Layout.astro';
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts.js';
import QuoteForm from '../components/QuoteForm.astro';
import FAQSection from '../components/FAQSection.astro';

const services = [
  {
    title: 'General Repairs',
    href: '/services/general-repairs',
    image: '/assets/images/general-repairs.jpg',
    description: 'Quick fixes for doors, walls, taps, and more.'
  },
  {
    title: 'Tiling & Grouting',
    href: '/services/tiling-grouting',
    image: '/assets/images/tiling-grouting.jpg',
    description: 'Crack repairs, re-grouting, and waterproof finishes.'
  },
  {
    title: 'Concreting & Paving',
    href: '/services/concreting-paving',
    image: '/assets/images/concreting-paving.jpg',
    description: 'Patios, slabs, driveways, and paths built to last.'
  }
];
---

<Layout>
  <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />

  <section
    class="relative min-h-screen overflow-hidden bg-black text-white"
    style="background-image: radial-gradient(circle at 20% 20%, rgba(245, 158, 11, 0.35) 0%, transparent 40%), linear-gradient(rgba(0, 0, 0, 0.55), rgba(0, 0, 0, 0.75)), url('/assets/hero.jpg'); background-size: cover; background-position: center;"
  >
    <div class="mx-auto flex min-h-screen max-w-7xl flex-col justify-center px-4 py-20 text-center sm:px-8">
      <p class="mb-4 text-sm font-semibold uppercase tracking-[0.2em] text-amber-300">Perth Handyman Services</p>
      <h1 class="mx-auto max-w-4xl text-4xl font-extrabold leading-tight drop-shadow-xl md:text-6xl">
        Reliable handyman work done right the first time
      </h1>
      <p class="mx-auto mt-6 max-w-2xl text-lg text-neutral-200 md:text-xl">
        Fast response, clear communication, and quality workmanship for repairs, tiling, and outdoor jobs.
      </p>

      <div class="mx-auto mt-8 flex w-full max-w-3xl flex-wrap justify-center gap-4">
        <a href="#quote" class="rounded-full bg-amber-500 px-6 py-3 font-semibold text-black transition hover:bg-amber-400">
          Request a Free Quote
        </a>
        <a href="/projects" class="rounded-full bg-white px-6 py-3 font-semibold text-black transition hover:bg-neutral-200">
          View My Projects
        </a>
        <a href="/services" class="rounded-full border border-white px-6 py-3 font-semibold transition hover:bg-white hover:text-black">
          Explore Services
        </a>
      </div>

      <div class="mx-auto mt-12 grid w-full max-w-4xl gap-4 rounded-2xl border border-white/20 bg-white/10 p-4 backdrop-blur-sm md:grid-cols-3">
        <div class="rounded-xl bg-black/20 p-4">
          <p class="text-3xl font-bold">24h</p>
          <p class="text-sm text-neutral-200">Average response time</p>
        </div>
        <div class="rounded-xl bg-black/20 p-4">
          <p class="text-3xl font-bold">100+</p>
          <p class="text-sm text-neutral-200">Completed local jobs</p>
        </div>
        <div class="rounded-xl bg-black/20 p-4">
          <p class="text-3xl font-bold">5★</p>
          <p class="text-sm text-neutral-200">Customer-first service</p>
        </div>
      </div>
    </div>
  </section>

  <main class="mx-auto max-w-7xl space-y-24 px-4 py-20 md:px-10">
    <section id="about" class="rounded-2xl bg-neutral-50 p-8 text-center shadow-sm md:p-12">
      <h2 class="text-3xl font-bold text-neutral-900">About Me</h2>
      <p class="mx-auto mt-5 max-w-3xl text-lg leading-relaxed text-neutral-700">
        I’m Cruz, a Perth local with a practical background in handyman work, earthmoving, and construction. I bring
        dependable workmanship, honest communication, and a problem-solving mindset to every job—whether it’s a small
        repair or a larger improvement project.
      </p>
      <p class="mx-auto mt-4 max-w-3xl text-base leading-relaxed text-neutral-600">
        My experience in IT and cybersecurity also sharpens how I plan, document, and deliver work cleanly and
        efficiently. You’ll always know what to expect, from first quote to final clean-up.
      </p>
      <a
        href="/about"
        class="mt-7 inline-block rounded-full border border-neutral-900 px-6 py-2.5 font-semibold text-neutral-900 transition hover:bg-neutral-900 hover:text-white"
      >
        Read More
      </a>
    </section>

    <section id="services" aria-labelledby="core-services-title">
      <div class="mb-10 flex items-end justify-between gap-4">
        <h2 id="core-services-title" class="text-3xl font-bold text-neutral-900">Core Services</h2>
        <a href="/services" class="text-sm font-semibold text-amber-700 hover:text-amber-600">View all services →</a>
      </div>

      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {services.map((service) => (
          <a href={service.href} class="group overflow-hidden rounded-2xl border border-neutral-200 bg-white shadow-sm transition hover:-translate-y-1 hover:shadow-xl">
            <img
              src={service.image}
              alt={service.title}
              class="h-48 w-full object-cover transition-transform duration-300 group-hover:scale-105"
              loading="lazy"
            />
            <div class="p-5">
              <h3 class="text-xl font-semibold text-neutral-900">{service.title}</h3>
              <p class="mt-2 text-neutral-600">{service.description}</p>
            </div>
          </a>
        ))}
      </div>
    </section>

    <section id="testimonials" class="rounded-2xl bg-neutral-100 px-6 py-14 md:px-10">
      <h2 class="text-center text-3xl font-bold text-neutral-800">Client Testimonials</h2>
      <div class="mx-auto mt-10 grid max-w-6xl gap-6 md:grid-cols-3">
        <div class="rounded-xl bg-white p-6 shadow-sm">
          <p class="italic text-neutral-700">“Cruz fixed our fence like new — super fast and professional!”</p>
          <p class="mt-4 font-semibold text-neutral-900">— Steven, Kinross</p>
        </div>
        <div class="rounded-xl bg-white p-6 shadow-sm">
          <p class="italic text-neutral-700">“We’re beyond happy with the tiling job. Looks amazing.”</p>
          <p class="mt-4 font-semibold text-neutral-900">— Susan, Jindalee</p>
        </div>
        <div class="rounded-xl bg-white p-6 shadow-sm">
          <p class="italic text-neutral-700">“Turned up on time, worked hard, and left everything spotless.”</p>
          <p class="mt-4 font-semibold text-neutral-900">— Melissa, Joondalup</p>
        </div>
      </div>
    </section>

    <section class="rounded-2xl bg-neutral-900 px-6 py-14 text-center text-white md:px-10">
      <h2 class="text-3xl font-bold">Ready to Get Started?</h2>
      <p class="mx-auto mt-4 max-w-2xl text-lg text-neutral-200">
        Request a free quote today and I’ll get back to you within 24 hours.
      </p>
      <div class="mt-7 flex flex-wrap justify-center gap-4">
        <a href="#quote" class="rounded-full bg-amber-400 px-6 py-3 font-semibold text-black transition hover:bg-amber-300">Request a Quote</a>
        <a href="tel:+61000000000" class="rounded-full border border-white/60 px-6 py-3 font-semibold transition hover:bg-white hover:text-black">Call Now</a>
      </div>
    </section>

    <section id="quote" class="scroll-mt-24" aria-labelledby="quote-title">
      <h2 id="quote-title" class="mb-5 text-3xl font-bold text-neutral-900">Get Your Free Quote</h2>
      <QuoteForm />
    </section>

    <section aria-labelledby="faq-title" class="rounded-2xl border border-neutral-200 bg-white p-6 md:p-10">
      <h2 id="faq-title" class="mb-6 text-3xl font-bold text-neutral-900">Frequently Asked Questions</h2>
      <FAQSection />
    </section>
  </main>
</Layout>
