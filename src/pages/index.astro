---
// src/pages/index.astro (Homepage)
import Layout from '../layouts/Layout.astro';
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts.js';
import QuoteForm from '../components/QuoteForm.astro';
import FAQSection from '../components/FAQSection.astro';
---

<Layout>
  <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />

  <!-- =====================  HERO SECTION  ===================== -->
  <section class="relative h-screen bg-fixed bg-center bg-cover" style="background-image: url('/assets/hero.jpg');">
    <div class="absolute inset-0 bg-black/60"></div>
    <div class="relative z-10 flex flex-col justify-center items-center text-center text-white h-full px-4">
      <h1 class="text-5xl md:text-6xl font-bold tracking-tight drop-shadow-lg">Handyman Cruz</h1>
      <p class="mt-4 text-xl md:text-2xl drop-shadow">Reliable. Skilled. Local.</p>
      <a href="#about" class="mt-8 inline-block px-6 py-3 border border-white rounded-full hover:bg-white hover:text-black transition">Learn More</a>
    </div>
  </section>

  <main class="max-w-7xl mx-auto px-4 md:px-10 py-20 space-y-24">

    <!-- ========== ABOUT PREVIEW ========== -->
    <section id="about" class="text-center">
      <h2 class="text-3xl font-semibold mb-4">About Me</h2>
      <p class="max-w-2xl mx-auto text-lg mb-6">I’m Cruz, a local handyman with a passion for clean work, reliable service, and honest craftsmanship. Whether it’s a quick fix or a bigger project, I’ve got you covered.</p>
      <a href="/about" class="inline-block border border-black px-5 py-2 rounded-full hover:bg-black hover:text-white transition">Read More</a>
    </section>

    <!-- ========== SERVICES GRID ========== -->
    <section id="services">
      <h2 class="text-3xl font-bold text-center text-yellow-500 mb-12">Core Services</h2>
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        <a href="/services/general-repairs" class="group bg-white rounded-lg overflow-hidden shadow hover:shadow-xl transition">
          <img src="/images/general-repairs.jpg" alt="General Repairs" class="h-48 w-full object-cover group-hover:scale-105 transition-transform duration-300" />
          <div class="p-5">
            <h3 class="text-xl font-semibold">General Repairs</h3>
            <p class="text-gray-600 mt-2">Quick fixes for doors, walls, taps, and more.</p>
          </div>
        </a>
        <a href="/services/tiling-grouting" class="group bg-white rounded-lg overflow-hidden shadow hover:shadow-xl transition">
          <img src="/images/tiling-grouting.jpg" alt="Tiling & Grouting" class="h-48 w-full object-cover group-hover:scale-105 transition-transform duration-300" />
          <div class="p-5">
            <h3 class="text-xl font-semibold">Tiling & Grouting</h3>
            <p class="text-gray-600 mt-2">Crack repairs, regrouting, and waterproof finishes.</p>
          </div>
        </a>
        <a href="/services/concreting-paving" class="group bg-white rounded-lg overflow-hidden shadow hover:shadow-xl transition">
          <img src="/images/concreting-paving.jpg" alt="Concreting & Paving" class="h-48 w-full object-cover group-hover:scale-105 transition-transform duration-300" />
          <div class="p-5">
            <h3 class="text-xl font-semibold">Concreting & Paving</h3>
            <p class="text-gray-600 mt-2">Patios, slabs, driveways, and more — built to last.</p>
          </div>
        </a>
      </div>
    </section>

    <!-- ========== TESTIMONIALS ========== -->
    <section id="testimonials" class="bg-neutral-100 py-16 rounded-lg">
      <h2 class="text-3xl font-bold text-center text-neutral-800 mb-10">Client Testimonials</h2>
      <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <div class="bg-white p-6 rounded shadow text-left">
          <p class="italic">“Cruz fixed our fence like new — super fast and professional!”</p>
          <p class="mt-4 font-semibold">— Sarah, Clarkson</p>
        </div>
        <div class="bg-white p-6 rounded shadow text-left">
          <p class="italic">“We’re beyond happy with the tiling job. Looks amazing.”</p>
          <p class="mt-4 font-semibold">— Jason, Wanneroo</p>
        </div>
        <div class="bg-white p-6 rounded shadow text-left">
          <p class="italic">“Turned up on time, great work ethic, and left everything clean.”</p>
          <p class="mt-4 font-semibold">— Melissa, Joondalup</p>
        </div>
      </div>
    </section>

    <!-- ========== CTA FOR QUOTE ========== -->
    <section class="text-center bg-black text-white rounded-lg py-16 px-6">
      <h2 class="text-3xl font-bold mb-4">Ready to Get Started?</h2>
      <p class="mb-6 text-lg">Request a free quote today — I’ll get back to you within 24 hours.</p>
      <a href="#quote" class="inline-block bg-yellow-500 hover:bg-yellow-600 text-black font-semibold px-6 py-3 rounded-full transition">Request a Quote</a>
    </section>

    <!-- ========== QUOTE FORM ========== -->
    <section id="quote">
      <QuoteForm />
    </section>

  </main>
</Layout>
