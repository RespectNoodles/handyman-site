---
import Layout from '../layouts/Layout.astro';
import BaseHead from '../components/BaseHead.astro';
---

<Layout title="Contact Me | Handyman Cruz">
  <BaseHead title="Contact Me | Handyman Cruz" description="Get in touch with Handyman Cruz." />

  <section class="mx-auto grid max-w-6xl gap-8 px-4 py-16 md:grid-cols-[1.2fr_0.8fr] md:px-8">
    <article class="rounded-2xl border border-slate-700 bg-slate-900 p-8">
      <h1 class="text-4xl font-extrabold">Contact Me</h1>
      <p class="mt-3 text-slate-300">Tell me about your project and Iâ€™ll get back to you as soon as possible.</p>

      <form class="mt-8 space-y-5" action="mailto:handymancruz3@gmail.com" method="post" enctype="text/plain">
        <label class="block">
          <span class="mb-2 block text-sm text-slate-300">Your name</span>
          <input type="text" name="name" required class="w-full rounded-lg border border-slate-700 bg-slate-950 px-4 py-3" />
        </label>
        <label class="block">
          <span class="mb-2 block text-sm text-slate-300">Email</span>
          <input type="email" name="email" required class="w-full rounded-lg border border-slate-700 bg-slate-950 px-4 py-3" />
        </label>
        <label class="block">
          <span class="mb-2 block text-sm text-slate-300">Message</span>
          <textarea name="message" rows="5" required class="w-full rounded-lg border border-slate-700 bg-slate-950 px-4 py-3"></textarea>
        </label>

        <button type="submit" class="rounded-lg bg-cyan-400 px-5 py-3 font-semibold text-slate-950 hover:bg-cyan-300">Send Message</button>
      </form>
    </article>

    <aside class="rounded-2xl border border-cyan-400/30 bg-slate-950 p-8">
      <h2 class="text-2xl font-bold text-cyan-300">Details</h2>
      <ul class="mt-6 space-y-5 text-slate-200">
        <li><span class="text-sm text-cyan-300">Call</span><p class="text-lg">+61 427 706 676</p></li>
        <li><span class="text-sm text-cyan-300">Email</span><p class="text-lg">handymancruz3@gmail.com</p></li>
        <li><span class="text-sm text-cyan-300">Region</span><p class="text-lg">Perth, WA</p></li>
        <li><span class="text-sm text-cyan-300">Hours</span><p class="text-lg">Mon - Fri, 8:00am - 6:00pm</p></li>
      </ul>
    </aside>
  </section>
</Layout>
