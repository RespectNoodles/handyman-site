---
// src/components/Header.astro
---
<script type="module" src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>

<nav x-data="{ open: false }" class="bg-white shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex-shrink-0 flex items-center font-bold text-blue-700">
        Handyman Cruz
      </div>
      <div class="-mr-2 flex items-center sm:hidden">
        <button @click="open = !open" class="inline-flex items-center justify-center p-2 rounded-md text-blue-700 hover:text-white hover:bg-blue-700 focus:outline-none">
          <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
            <path :class="{'hidden': open, 'inline-flex': !open }" class="inline-flex" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            <path :class="{'inline-flex': open, 'hidden': !open }" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
        <a href="/" class="text-blue-700 hover:underline">Home</a>
        <a href="#services" class="text-blue-700 hover:underline">Services</a>
        <a href="/projects" class="text-blue-700 hover:underline">Projects</a>
        <a href="#about" class="text-blue-700 hover:underline">About</a>
        <a href="#contact" class="text-blue-700 hover:underline">Contact</a>
        <a href="#testimonials" class="text-blue-700 hover:underline">Testimonials</a>
        <a href="#quote" class="text-blue-700 hover:underline">Quote</a>
      </div>
    </div>
  </div>

  <div class="sm:hidden" x-show="open">
    <div class="pt-2 pb-3 space-y-1">
      <a href="/" class="block pl-3 pr-4 py-2 text-blue-700 hover:bg-blue-50">Home</a>
      <a href="#services" class="block pl-3 pr-4 py-2 text-blue-700 hover:bg-blue-50">Services</a>
      <a href="/projects" class="block pl-3 pr-4 py-2 text-blue-700 hover:bg-blue-50">Projects</a>
      <a href="#about" class="block pl-3 pr-4 py-2 text-blue-700 hover:bg-blue-50">About</a>
      <a href="#contact" class="block pl-3 pr-4 py-2 text-blue-700 hover:bg-blue-50">Contact</a>
      <a href="#testimonials" class="block pl-3 pr-4 py-2 text-blue-700 hover:bg-blue-50">Testimonials</a>
      <a href="#quote" class="block pl-3 pr-4 py-2 text-blue-700 hover:bg-blue-50">Quote</a>
    </div>
  </div>
</nav>

<header class="relative h-[60vh] flex items-center justify-center bg-cover bg-center" style="background-image: url('/images/tools.jpg');">
  <div class="absolute inset-0 bg-black bg-opacity-60"></div>
  <div class="relative z-10 text-center text-white px-6">
    <h1 class="text-4xl md:text-5xl font-bold mb-4 drop-shadow-md">Welcome to Handyman Cruz</h1>
    <p class="text-lg md:text-xl mb-6 drop-shadow-sm">Skilled, reliable & affordable handyman work across Melbourneâ€™s north.</p>
    <a href="#quote" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded shadow-md transition">Request a Free Quote</a>
  </div>
</header>
