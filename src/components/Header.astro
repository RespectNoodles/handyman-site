---
import HeaderLink from './HeaderLink.astro';
---
<header class="bg-white shadow sticky top-0 z-50">
  <div class="container mx-auto flex flex-wrap items-center justify-between py-4 px-6">
    <!-- Site Logo / Name -->
    <a href="/" class="text-2xl font-extrabold tracking-tight text-gray-800">
      Handyman Cruz
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex gap-6 text-gray-700">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/services">Services</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/contact">Contact</HeaderLink>
      <HeaderLink href="/#testimonials">Testimonials</HeaderLink>
      <HeaderLink href="/#quote">Request a Quote</HeaderLink>
    </nav>

    <!-- Mobile CTA (simple) -->
    <a
      href="/#quote"
      class="md:hidden inline-block bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-semibold"
    >
      Quote
    </a>
  </div>
</header>
