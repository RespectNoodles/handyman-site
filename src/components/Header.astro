---
import { useState } from 'astro/jsx-runtime'; // Astro’s reactive state helper
const [menuOpen, setMenuOpen] = useState(false);
---

<header class="bg-gray-900 text-gray-100 p-4 flex items-center justify-between">
  <h1 class="text-xl font-bold">Handyman Cruz</h1>

  <!-- Desktop nav -->
  <nav class="hidden md:flex space-x-6">
    <a href="/" class="hover:underline">Home</a>
    <a href="/services" class="hover:underline">Services</a>
    <a href="/projects" class="hover:underline">Projects</a>
    <a href="/about" class="hover:underline">About</a>
    <a href="/contact" class="hover:underline">Contact</a>
    <a href="/testimonials" class="hover:underline">Testimonials</a>
  </nav>

  <!-- Mobile menu button -->
  <button
    class="md:hidden bg-white text-gray-900 px-3 py-1 rounded"
    aria-label="Toggle Menu"
    onClick={() => setMenuOpen(!menuOpen)}
  >
    ☰ Menu
  </button>
</header>

<!-- Mobile nav dropdown -->
{menuOpen && (
  <nav class="md:hidden bg-gray-800 text-gray-100 p-4 space-y-2">
    <a href="/" class="block hover:underline">Home</a>
    <a href="/services" class="block hover:underline">Services</a>
    <a href="/projects" class="block hover:underline">Projects</a>
    <a href="/about" class="block hover:underline">About</a>
    <a href="/contact" class="block hover:underline">Contact</a>
    <a href="/testimonials" class="block hover:underline">Testimonials</a>
  </nav>
)}
