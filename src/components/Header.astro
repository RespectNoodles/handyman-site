---
// src/components/Header.astro
import { SITE_TITLE } from '../consts';
---

<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo / Site Title -->
      <div class="flex-shrink-0 text-2xl font-bold text-blue-700">
        <a href="/">{SITE_TITLE}</a>
      </div>

      <!-- Desktop Nav -->
      <nav class="hidden md:flex space-x-6 text-lg">
        <a href="/" class="text-gray-700 hover:text-blue-600 transition">Home</a>
        <a href="/services" class="text-gray-700 hover:text-blue-600 transition">Services</a>
        <a href="/projects" class="text-gray-700 hover:text-blue-600 transition">Projects</a>
        <a href="/about" class="text-gray-700 hover:text-blue-600 transition">About</a>
        <a href="#contact" class="text-gray-700 hover:text-blue-600 transition">Contact</a>
        <a href="#testimonials" class="text-gray-700 hover:text-blue-600 transition">Testimonials</a>
        <a href="#quote" class="text-white bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded transition">Quote</a>
      </nav>

      <!-- Mobile Menu Button -->
      <div class="md:hidden flex items-center">
        <button id="mobile-menu-button" class="text-gray-700 focus:outline-none">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
               viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Dropdown Nav -->
  <div id="mobile-menu" class="md:hidden hidden px-4 pb-4 space-y-2 text-lg">
    <a href="/" class="block text-gray-700 hover:text-blue-600">Home</a>
    <a href="/services" class="block text-gray-700 hover:text-blue-600">Services</a>
    <a href="/projects" class="block text-gray-700 hover:text-blue-600">Projects</a>
    <a href="/about" class="block text-gray-700 hover:text-blue-600">About</a>
    <a href="#contact" class="block text-gray-700 hover:text-blue-600">Contact</a>
    <a href="#testimonials" class="block text-gray-700 hover:text-blue-600">Testimonials</a>
    <a href="#quote" class="block text-white bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded">Quote</a>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const button = document.getElementById('mobile-menu-button');
      const menu = document.getElementById('mobile-menu');
      button.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
    });
  </script>
</header>
