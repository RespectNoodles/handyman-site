---
// src/components/Header.astro
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/projects', label: 'Projects' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
  { href: '/testimonials', label: 'Testimonials' },
];
---

<header class="bg-gray-900 text-white px-4 py-3 shadow-md sticky top-0 z-50">
  <div class="max-w-7xl mx-auto flex items-center justify-between">
    <a href="/" class="text-2xl font-bold tracking-wide text-yellow-400">Handyman Cruz</a>

    <!-- Mobile Menu Button -->
    <button id="menu-button" class="md:hidden p-2 rounded hover:bg-gray-700 focus:outline-none">
      â˜°
    </button>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex gap-6">
      {navItems.map(item => (
        <a href={item.href} class="hover:text-yellow-300 transition">{item.label}</a>
      ))}
    </nav>
  </div>

  <!-- Mobile Menu (initially hidden) -->
  <div id="mobile-menu" class="hidden md:hidden mt-2 px-4 flex flex-col gap-3">
    {navItems.map(item => (
      <a href={item.href} class="hover:text-yellow-300 transition">{item.label}</a>
    ))}
  </div>

  <script>
    const btn = document.getElementById('menu-button');
    const menu = document.getElementById('mobile-menu');
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  </script>
</header>
