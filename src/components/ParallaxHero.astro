---
// Accepts: title, subtitle (optional), image (optional)
const { title, subtitle = '', image = '/images/texture-wood.jpg' } = Astro.props;
---
<section
  class="parallax-hero flex items-center justify-center text-center h-[400px] md:h-[500px] text-white relative overflow-hidden"
  style={`background-image: url('${image}');`}
>
  <div class="absolute inset-0 bg-gradient-to-br from-black/70 via-gray-900/60 to-black/80 animate-gradient"></div>
  <div class="z-10 p-6">
    <h1 class="text-4xl md:text-5xl font-bold drop-shadow-lg mb-4">{title}</h1>
    {subtitle && <p class="text-lg md:text-xl text-gray-200">{subtitle}</p>}
  </div>
</section>

<style is:global>
  .parallax-hero {
    background-attachment: fixed;
    background-position: center;
    background-size: cover;
  }

  @keyframes gradientCycle {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .animate-gradient {
    background: linear-gradient(270deg, rgba(0,0,0,0.4), rgba(50,50,50,0.6), rgba(0,0,0,0.4));
    background-size: 600% 600%;
    animation: gradientCycle 20s ease infinite;
  }
</style>
