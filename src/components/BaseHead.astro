---
const { title = "Handyman Cruz", description = "Reliable handyman services in Perth", image = "/default-og.jpg", url = "https://handymancruz.com" } = Astro.props;
---
<head>
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  
  <!-- Open Graph for social sharing -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://handymancruz.com/" />
  <meta property="og:image" content="https://handymancruz.com/assets/Business-card-front.png" />
  
  <!-- Optional: Twitter card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content="https://handymancruz.com/assets/Business-card-front.png" />
</head>
