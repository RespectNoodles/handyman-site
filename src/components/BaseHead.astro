---
/**
 * BaseHead.astro
 * Re‑usable head element for every page.
 * Pass `title`, `description`, `image`, and `url` props where needed.
 */
const {
  title = 'Handyman Cruz – Reliable handyman services in Perth',
  description = 'From repairs to renovations, Handyman Cruz delivers professional handyman services across Perth. Get a free quote today!',
  image = '/assets/Business-card-front.png',
  url = 'https://handymancruz.com/',
} = Astro.props;
---
<head>
  <meta charset="utf-8" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="canonical" href={url} />

  <!-- Open Graph -->
  <meta property="og:site_name" content="Handyman Cruz" />
  <meta property="og:type" content="website" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={url} />
  <meta property="og:image" content={image} />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={image} />

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/favicon.png" />
</head>
