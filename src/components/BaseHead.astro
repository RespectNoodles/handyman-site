---
/**
 * BaseHead.astro
 * Re‑usable head element for every page.
 * Pass `title`, `description`, `image`, and `url` props where needed.
 */
const {
  title = 'Handyman Cruz – Reliable handyman services in Perth',
  description = 'From repairs to renovations, Handyman Cruz delivers professional handyman services across Perth. Get a free quote today!',
  image = '/assets/Business-card-front.png',
  url = 'https://handymancruz.com/',
} = Astro.props;
---
<head>
  <meta charset="utf-8" />

  <!-- Google Font: Inter (lightweight, variable) -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap"
    rel="stylesheet"
  />
  
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="canonical" href={url} />

  <!-- Open Graph -->
  <meta property="og:site_name" content="Handyman Cruz" />
  <meta property="og:type" content="website" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={url} />
  <meta property="og:image" content={image} />


  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/favicon.png" />
</head>
